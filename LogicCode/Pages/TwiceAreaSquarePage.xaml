<Page x:Class="LogicCode.Pages.TwiceAreaSquarePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LogicCode.Controls"      
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TwiceAreaSquarePage">
    <Grid>
        <local:ExampleControl x:Name="Example">
            <local:ExampleControl.TitleExample>                
                    <TextBlock Text="Twice Area of Square" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Margin="10" 
                           HorizontalAlignment="Center"/>                         
            </local:ExampleControl.TitleExample>
            <local:ExampleControl.DescriptionExample>                
                    <TextBlock Text="In this example the program calculates twice the area of a square"/>                            
            </local:ExampleControl.DescriptionExample>
            <local:ExampleControl.InputsExample>                
                    <TextBlock Text="Value Side"/>                                 
            </local:ExampleControl.InputsExample>
        </local:ExampleControl>
    </Grid>
</Page>
